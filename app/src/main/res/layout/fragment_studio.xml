<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/firstBox"
        android:layout_width="135dp"
        android:layout_height="139dp"
        android:layout_below="@id/topBox"
        android:layout_marginStart="37dp"
        android:layout_marginTop="-121dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/topBox"
        android:background="@drawable/round_box"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/auslastung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topBox"
        android:layout_width="184dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_box"
        android:orientation="vertical"
        android:padding="16dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleBox"
        android:layout_width="380dp"
        android:layout_height="196dp"
        android:layout_below="@id/topBox"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_box"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/studioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/openingHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLeftBox"
        android:layout_width="179dp"
        android:layout_height="137dp"
        android:layout_below="@id/middleBox"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_box"
        android:orientation="vertical"
        android:padding="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geräte"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomRightBox"
        android:layout_width="197dp"
        android:layout_height="138dp"
        android:layout_below="@+id/middleBox"
        android:layout_marginStart="11dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/bottomLeftBox"
        android:layout_weight="1"
        android:background="@drawable/round_box"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trainingspläne"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/Capacity"
        android:layout_width="342dp"
        android:layout_height="73dp"
        android:contentDescription="Capacity"
        android:src="@drawable/meancapacity" />


</RelativeLayout>
